# Frontend Environment Variables (Cloudflare Pages)
# 로컬 개발 환경
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Production (Cloudflare Pages Dashboard에서 설정 필요)
# NEXT_PUBLIC_API_URL=https://your-domain.pages.dev
# NEXTAUTH_URL=https://your-domain.pages.dev

# NextAuth Secret (강력한 랜덤 문자열 사용)
# 생성: openssl rand -base64 32
NEXTAUTH_SECRET=replace-with-strong-secret-minimum-32-characters

# FastAPI Backend URL
# 개발: http://localhost:8000
# 프로덕션 (Render): https://your-service-name.onrender.com
# Render 배포 완료 후 실제 URL로 교체하세요
NEXT_PUBLIC_FASTAPI_URL=https://vlooo-backend.onrender.com

# 인증 데모 계정
AUTH_DEMO_EMAIL=demo@vlooo.ai
AUTH_DEMO_PASSWORD=demo1234

# Cloudflare Images (선택사항)
# NEXT_PUBLIC_CLOUDFLARE_IMAGES_ACCOUNT=your-account-hash

# OpenAI API (백엔드에서만 사용)
# OPENAI_API_KEY=sk-your-key-here

# ElevenLabs API (백엔드에서만 사용)
# ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Cloudflare R2 (백엔드에서만 사용)
# CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
# CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key
# CLOUDFLARE_R2_BUCKET_NAME=vlooo-storage
