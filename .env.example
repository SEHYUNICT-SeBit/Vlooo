# Example environment variables for Vlooo
# Rename to .env.local and fill real secrets locally (DO NOT commit)

# Public URL for the frontend (used in client code)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Server-side secret keys (keep private - do NOT add NEXT_PUBLIC_ prefix)
OPENAI_API_KEY=sk-REPLACE_WITH_YOUR_KEY
ELEVENLABS_API_KEY=REPLACE_WITH_YOUR_KEY

# Cloudflare R2 (if used for storage)
CLOUDFLARE_R2_ACCOUNT_ID=REPLACE_WITH_ID
CLOUDFLARE_R2_ACCESS_KEY_ID=REPLACE_WITH_KEY
CLOUDFLARE_R2_SECRET_ACCESS_KEY=REPLACE_WITH_SECRET

# Optional / analytics
NEXT_PUBLIC_ANALYTICS_ID=REPLACE_WITH_ID

# Local environment
NODE_ENV=development
